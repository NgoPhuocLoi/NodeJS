<style>
    body{
        font-family: 'Pacifico', cursive;
        background-color: #EDE1C7;
    }
    .chemicalEqt-list{
        width: 100%;
        padding: 0;
        list-style: none;
        margin-top: 20px;
    }

    .chemicalEqt-item{
        padding: 8px 14px;
        border: 1px solid #DBB16A;
        border-left-width: 5px;
        background-color: #fff;
        border-radius: 6px;
        margin-top: 10px;
        overflow-x: auto;
        padding-right: 10px;
    }

    .chemicalEqt-item::-webkit-scrollbar{
        height: 4px;
        background-color: #ddd;
    }
    .chemicalEqt-item::-webkit-scrollbar-thumb{
        border-radius: 10px;
        height: auto;
        background-color: #999;
    }

    .chemicalEqt-item h4{ 
        margin: 0;
        font-size: 20px;
    }
