            reagent: item.join(" ").replace(/{/gi, '_{').replace(/\(/g, '').replace(/\)/g, '').replace(/\[/g, '{(').replace(/\]/g, ')}'),
            product: arr2[index].join(" ").replace(/{/gi, '_{').replace(/\(/g, '').replace(/\)/g, '').replace(/\[/g, '{(').replace(/\]/g, ')}'),
        })
        console.log(chemicalList[index].reagent)
