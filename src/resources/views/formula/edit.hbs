                <input
                    type="text"
                    name="searchBar"
                    id="searchBar"
                    placeholder="Nh·∫≠p t√™n c√¥ng th·ª©c ƒë·ªÉ t√¨m ki·∫øm"
                />
            </div>
            <ul id="coursesList">
            {{#each formulas}}
                <div name="{{this.name}}" id="{{this._id}}" class="input"></div>
            {{/each}}
