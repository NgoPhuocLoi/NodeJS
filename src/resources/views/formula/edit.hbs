*/

const displayCourses = (courses) => {
    const htmlString = courses
        .map((course) => {
            return `
            <li class="course">
                <div class="course-info">
                    ${course.name}
                    
                </div>
                
                <button class="delete-btn" id="${course.id}">X</button>
            </li>
        `;
        })
        .join('');
    coursesList.innerHTML = htmlString;
};
displayCourses(courses);

            
            
