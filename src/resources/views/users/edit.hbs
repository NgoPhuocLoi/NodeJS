<div class="mt-4">
    <form method="POST" action="/user/{{user._id}}?_method=PUT"> 
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" value="{{user.name}}" name="name" class="form-control" id="name">
        </div>
        <div class="form-group">
            <label for="age">Age</label>
            <input type="number" value="{{user.age}}" name="age" class="form-control" id="age">
        </div>
        <div class="form-group">
            <label for="job">Job</label>
            <input type="text" value="{{user.job}}" name="job" class="form-control" id="job">
        </div>
